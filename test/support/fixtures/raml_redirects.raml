#%RAML 1.0
title: RAML Redirects
baseUri: http://localhost:4001
mediaType: application/json
types:
  Name:
    type: string
    pattern: '\A[-a-zA-Z0-9_]+\z'
  URL:
    type: string
    pattern: '\A\S+\z'
    example: http://example.com/
  Redirect:
    properties:
      name: Name
      url: URL
  ShortURL:
    properties:
      shortened: URL
      example:
        shortened: http://localhost:4001/r/example
/redirects:
  put:
    queryString: Redirect
    responses: 
      200:
        body: ShortURL
/r/{name}:
  uriParameters:
    name: Name
  get:
    responses:
      302:
        headers:
          Location: URL
