#%RAML 1.0
title: API with Types
version: V1
baseUri: http://example.com/api
protocols: ["HTTP", "HTTPS"]
description: API with Types description

mediaType: application/json

types:
  User:
    type: object
    properties:
      firstname: string
      lastname:  string
      age:       number
/users/{id}:
  get:
    responses:
      200:
        body:
          application/json:
            type: User
